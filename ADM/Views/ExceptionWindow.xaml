<Window x:Class="ADM.Views.ExceptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="An error has occurred" Height="300" Width="300">
    <ScrollViewer>
        <ui:SimpleStackPanel Margin="12" Spacing="12">
            <TextBlock Text="Error D:" Style="{StaticResource HeaderStyle}"/>
            <TextBlock x:Name="ErrorTextBox"/>
            <Button Content="Exit Auto Dark Mode" Click="Button_OnClick"/>
        </ui:SimpleStackPanel>
    </ScrollViewer>
</Window>
